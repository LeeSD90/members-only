<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<h1>New Post</h1>
		<%= form_for :post, url: posts_path do |f| %>

		      <%= f.label :title %>
		      <%= f.text_field :title, class: 'form-control' %>

		      <%= f.label :content %>
		      <%= f.text_area :content, class: 'form-control' %>

		      <%= f.submit "Submit", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>